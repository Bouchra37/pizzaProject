<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    tools:layout_editor_absoluteX="-24dp"
    tools:layout_editor_absoluteY="-19dp">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="33dp"
        android:layout_height="26dp"
        android:layout_marginStart="136dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toTopOf="@+id/nbrIngredients"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_editor_absoluteX="323dp"
        app:layout_editor_absoluteY="67dp"
        app:srcCompat="@drawable/share" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="27dp"
        android:layout_height="31dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_editor_absoluteX="168dp"
        app:layout_editor_absoluteY="65dp"
        app:srcCompat="@drawable/temps" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="140dp"
        android:layout_height="136dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.545"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nom"
        android:layout_width="101dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="30dp"
        android:text="TextView"
        android:textColor="#FF0000"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/duree"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.015" />

    <TextView
        android:id="@+id/duree"
        android:layout_width="63dp"
        android:layout_height="22dp"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="50dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/nbrIngredients"
        app:layout_constraintStart_toEndOf="@+id/photo" />

    <TextView
        android:id="@+id/nbrIngredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginBottom="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/photo" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="gone"
        tools:layout_editor_absoluteX="328dp"
        tools:layout_editor_absoluteY="44dp" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@+id/photo"
        app:layout_editor_absoluteX="170dp"
        app:layout_editor_absoluteY="176dp"
        app:srcCompat="@drawable/fromage"
        tools:layout_editor_absoluteY="179dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="108dp"
        android:text="Ingredients"
        app:layout_constraintStart_toEndOf="@+id/nbrIngredients"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

</androidx.constraintlayout.widget.ConstraintLayout>